<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <form class="container" method="post" action="/addshoe">
      <div class="form-group">
        <label for="brand">Brand</label>
        <input
          id="brand"
          class="form-control"
          name="brand"
          type="text"
          value="<%= brand %>"
        >
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input
          id="name"
          class="form-control"
          name="name"
          type="text"
          value="<%= name %>"
        >
      </div>

      <button class="btn btn-success" type="submit">Submit</button>
    </form>

    <%- include('partials/footer'); %>
  </body>
</html>
