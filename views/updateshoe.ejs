<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <form class="container" method="post" action="/shoe/<%= shoe.id %>/edit">
      <div class="form-group">
        <label for="id">ID</label>
        <input
          id="id"
          class="form-control"
          name="id"
          type=number
          value="<%= shoe.id %>"
          min="1000"
          max="9999"
        >
      </div>
      <div class="form-group">
        <label for="brand">Brand</label>
        <input
          id="brand"
          class="form-control"
          name="brand"
          type="text"
          value="<%= shoe.brand %>"
        >
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input
          id="name"
          class="form-control"
          name="name"
          type="text"
          value="<%= shoe.name %>"
        >
      </div>
      <div class="form-group">
        <label for="url">Image Url</label>
        <input
          id="name"
          class="form-control"
          name="url"
          type="text"
          value="<%= shoe.url %>"
        >
      </div>
      <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="name"
              class="form-control"
              name="description"
              rows="5"
              value="<%= shoe.description %>"
              autofocus
              ></textarea>
          </div>

      <button class="btn btn-success" type="submit">Update</button>
    </form>

    <%- include('partials/footer'); %>
  </body>
</html>
